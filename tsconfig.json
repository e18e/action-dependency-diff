{
  "compilerOptions": {
    "noEmit": true,
    "target": "esnext",
    "module": "node18",
    "moduleResolution": "node16",
    "types": ["node"],
    "declaration": true,
    "outDir": "./lib",
    "isolatedModules": true,
    "isolatedDeclarations": false,
    "erasableSyntaxOnly": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "resolveJsonModule": true
  },
  "include": [
    "src",
    "test"
  ]
}
